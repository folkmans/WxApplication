/**index.wxss**/
@import "/pages/index-item/index-item.wxss";
.header{
  display: flex;
  position: relative;
  height: 60rpx;
  font-size: 30rpx;
  padding: 15rpx 20rpx 15rpx 0rpx;
  line-height: 55rpx;
  border-bottom: 5rpx solid #F4F4F4;
   /* background-color: black;  */
  
}
.header-location image{
  padding: 13rpx 8rpx 0rpx 15rpx;
  width: 30rpx;
  height: 30rpx;
}
.header-left{
  display: flex;
  filter:alpha(opacity=60); 
  -moz-opacity:0.6;
  -khtml-opacity: 0.6;
  opacity: 0.6; 
  border-radius:20px ; 
  /* background-color: black; */
  width: 300rpx;
  padding: 8rpx 0rpx 0rpx 3rpx;
}
.header-text{
  color: black;
  font-size: 25rpx; 
}
.arrow{
  width: 10rpx;
  height: 10rpx;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);
  position: absolute;
  left: 250rpx;
  top:43rpx;
}
.header-right-image{
  position: absolute;
  left: 312rpx;
  top: 32rpx;
  width: 30rpx;
  height: 30rpx;
}
.search-input{
  background-color: lightgray;
  filter:alpha(opacity=70); 
  -moz-opacity:0.7;
  -khtml-opacity: 0.7;
  opacity: 0.7; 
  border-radius:30rpx;
  width: 450rpx;
  margin-top: 6rpx;
}
.search-input>input{
  padding: 3rpx 0rpx 0rpx 60rpx;
}
swiper{
  width: 100%;
  height: 400rpx;
}
swiper image{
  width: 100%;
  height: 400rpx;
}

.mid-center{
  text-align: center;
  padding: 18rpx 0 18rpx 0;
  font-weight: bold;
}
.sort{
  display: flex;
  font-size: 32rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.sort>view{
  text-align: center;
  width: 25%;
   /* border: 1rpx solid;  */
}
.sort-screen{
  display: flex;
  position: relative;
  border-left: 1rpx solid lightgray; 
}
.sort-text{
  position: absolute;
  left: 30rpx;

}
 .sort-img{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
  /* padding: 0 0 0 1rpx; */
} 
.screen-img{
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top:15rpx;
  left: 110rpx;
}
/* 去掉滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}




